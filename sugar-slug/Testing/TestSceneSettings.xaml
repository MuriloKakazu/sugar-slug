<UserControl x:Class="SugarSlug.Testing.TestSceneSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SugarSlug.Testing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel VerticalAlignment="Center">
            <StackPanel>
                <DockPanel>
                    <Label Content="Gravity:"></Label>
                    <Slider x:Name="GravityValue" Minimum="-100" Maximum="100" SmallChange="1" Value="-9.8" LargeChange="5" ValueChanged="GravityValue_ValueChanged" MinWidth="250" AutoToolTipPlacement="TopLeft" />
                </DockPanel>
                <DockPanel>
                    <Label Content="Density:"></Label>
                    <Slider x:Name="DensityValue" Maximum="25" SmallChange="0.5" Value="1.0" LargeChange="2" ValueChanged="DensityValue_ValueChanged" MinWidth="250" AutoToolTipPlacement="TopLeft" />
                </DockPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
